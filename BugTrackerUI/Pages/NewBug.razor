@page "/new-bug"
<h3>Add New Bug</h3>


<EditForm Model="AddBug">
    <InputText @bind-Value="@AddBug.Title" placeholder="Enter Title">Enter Title</InputText>
    <InputText @bind-Value="@AddBug.Description" placeholder="Enter Description">Enter Description</InputText>
    <InputNumber @bind-Value="@AddBug.Priority" placeholder="Enter Priority">Enter Priority</InputNumber>
    <button type="submit">Add Bug</button>
</EditForm>

@code{
    public Bug AddBug { get; set; } = new Bug();
}